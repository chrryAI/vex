{
  "name": "zero-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "generate": "drizzle-zero generate --config drizzle-zero.config.ts --output zero-schema.gen.ts --format",
    "dev": "npm run generate && tsx watch src/index.ts",
    "build": "npm run generate && tsc",
    "start": "node dist/index.js",
    "docker:build": "docker build -t vex-zero-server .",
    "docker:run": "docker run -p 4848:4848 vex-zero-server"
  },
  "dependencies": {
    "@rocicorp/zero": "^0.22.2025081301",
    "@repo/db": "workspace:*",
    "dotenv": "^16.4.5",
    "postgres": "^3.4.4",
    "drizzle-zero": "^0.16.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.11.19"
  },
  "devDependencies": {
    "tsx": "^4.7.1"
  }
}

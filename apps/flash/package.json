{
  "name": "flash",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "rm -rf .vite node_modules/.vite dist && NODE_ENV=development node server --force",
    "build": "pnpm run build:client && pnpm run build:server",
    "build:client": "NODE_ENV=production pnpm vite build --outDir dist/client",
    "build:server": "NODE_ENV=production pnpm vite build --ssr src/entry-server.tsx --outDir dist/server",
    "start": "cross-env NODE_ENV=production node server",
    "preview": "cross-env NODE_ENV=production node server",
    "check-types": "tsc --noEmit",
    "test": "vitest run --coverage.enabled --coverage.provider=v8 --coverage.reporter=text --coverage.reporter=lcov"
  },
  "dependencies": {
    "@arcjet/node": "1.0.0-beta.15",
    "@chrryai/chrry": "workspace:*",
    "@sentry/node": "^7.120.3",
    "@vitejs/plugin-react": "^5.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "gray-matter": "^4.0.3",
    "i18n-iso-countries": "^7.14.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sirv": "^3.0.2",
    "uuid": "^13.0.0",
    "vite": "^7.3.1",
    "vite-plugin-compression2": "^1.3.0",
    "vite-plugin-static-copy": "^3.1.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitest/coverage-v8": "^2.1.9",
    "cross-env": "^10.0.0",
    "sass": "^1.94.2",
    "typescript": "~5.9.2",
    "vitest": "^2.1.9"
  }
}

{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "core:window:allow-start-dragging",
      "allow": [
        {
          "windows": ["*"],
          "url": ["http://localhost:*", "https://*"]
        }
      ]
    },
    {
      "identifier": "core:window:allow-internal-toggle-maximize",
      "allow": [
        {
          "windows": ["*"]
        }
      ]
    }
  ]
}

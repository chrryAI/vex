{
  "name": "@chrryai/browser-core",
  "version": "1.0.0",
  "description": "Generic Electron browser foundation for white-label browsers",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5174 && electron .",
    "build": "tsc && vite build && electron-builder",
    "build:mac": "npm run build -- --mac",
    "build:win": "npm run build -- --win",
    "build:linux": "npm run build -- --linux"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "chokidar": "^3.5.3",
    "node-pty": "^1.0.0",
    "simple-git": "^3.22.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "ai.chrry.browser",
    "productName": "Browser",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}

{
  "extends": "../../packages/typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "paths": {
      "@chrryai/chrry/*": ["../../packages/ui/*"],
      "chrry/*": ["../../packages/ui/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "types/**/*.d.ts"],
  "exclude": ["node_modules", "tests/**/*", "**/*.test.ts", "**/*.test.tsx"]
}

{
  "name": "@chrryai/browser",
  "version": "1.7.68",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:chrome",
    "build:chrome": "rm -rf dist && MODE=sushi vite build && cd dist && zip -r ../dist-chrome-sushi.zip .",
    "build:dev": "rm -rf dist && MODE=sushi vite build --mode development",
    "build:firefox": "rm -rf dist && tsc && MODE=sushi VITE_BROWSER=firefox vite build && npm run zip:firefox",
    "dev": "MODE=sushi vite build --mode development --watch",
    "dev:browser": "pnpm build:dev && node launch-browser.js",
    "dev:watch": "node dev-watch.js",
    "restart:browser": "pnpm build:dev && node restart-browser.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "zip:chrome": "cd dist && zip -r ../dist-chrome.zip .",
    "zip:firefox": "cd dist && zip -r ../dist-firefox.zip ."
  },
  "dependencies": {
    "@chrryai/code": "workspace:*",
    "@chrryai/chrry": "workspace:*",
    "@eslint/js": "^9.30.1",
    "@sentry/react": "^10.10.0",
    "@types/chrome": "^0.1.1",
    "@types/webextension-polyfill": "^0.12.3",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "i18next": "^23.7.6",
    "react": "^19.1.1",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^19.1.1",
    "react-i18next": "^14.0.0",
    "sass": "^1.90.0",
    "typescript-eslint": "^8.35.1",
    "vite-plugin-static-copy": "^3.1.1",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-big-calendar": "^1.16.3",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.12",
    "terser": "^5.44.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  }
}

{
  "name": "@chrryai/code",
  "version": "1.0.0",
  "description": "Sushi - Browser-First IDE components (Chrome extension only)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./editor": "./src/editor/index.ts",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "private": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@chrryai/chrry": "workspace:*",
    "@monaco-editor/react": "^4.6.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.2",
    "monaco-editor": "^0.55.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.1",
    "@types/node": "^22.15.3",
    "@types/webextension-polyfill": "^0.12.3",
    "tsup": "^8.0.0",
    "typescript": "~5.9.2"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}

{
  "name": "@repo/next-to-hono",
  "version": "0.1.0",
  "description": "Automated converter for migrating Next.js API routes to Hono",
  "main": "dist/index.js",
  "bin": {
    "next-to-hono": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm",
    "dev": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "convert": "tsx src/cli.ts"
  },
  "keywords": [
    "nextjs",
    "hono",
    "api-routes",
    "migration",
    "converter",
    "performance"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "@babel/generator": "^7.23.0",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "chalk": "^5.3.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.4",
    "@types/babel__generator": "^7.6.7",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "hono": "^3.11.0"
  },
  "peerDependencies": {
    "hono": "^3.0.0 || ^4.0.0"
  }
}

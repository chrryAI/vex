{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "ES2022",
    "target": "es2022",
    "declaration": true,
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "build", "node_modules"]
}

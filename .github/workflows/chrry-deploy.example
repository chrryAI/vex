# Chrry App Deployment Workflow
# 
# This workflow automatically validates, builds, and deploys your Chrry app
# when you push to the main branch.
#
# Copy this file to your app repository as .github/workflows/chrry-deploy.yml

name: Deploy to Chrry

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

env:
  NODE_VERSION: '22'

jobs:
  # ============================================
  # VALIDATION
  # ============================================
  validate:
    name: Validate Config
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
      
      - name: Install dependencies
        run: npm ci
      
      - name: Validate chrry.config.js
        run: |
          echo "üîç Validating Chrry configuration..."
          npx chrry validate
      
      - name: Check TypeScript
        run: |
          echo "üîç Type checking..."
          npx tsc --noEmit
      
      - name: Lint code
        run: |
          echo "üîç Linting..."
          npm run lint

  # ============================================
  # SECURITY SCAN
  # ============================================
  security:
    name: Security Scan
    runs-on: ubuntu-latest
    needs: validate
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
      
      - name: Install dependencies
        run: npm ci
      
      - name: Run security audit
        run: npm audit --production
      
      - name: Scan for secrets
        uses: trufflesecurity/trufflehog@main
        with:
          path: ./
          base: ${{ github.event.repository.default_branch }}
          head: HEAD

  # ============================================
  # BUILD
  # ============================================
  build:
    name: Build App
    runs-on: ubuntu-latest
    needs: [validate, security]
    
    strategy:
      matrix:
        platform: [web, native]
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
      
      - name: Install dependencies
        run: npm ci
      
      - name: Build for ${{ matrix.platform }}
        run: |
          echo "üèóÔ∏è Building for ${{ matrix.platform }}..."
          npx chrry build --platform=${{ matrix.platform }}
      
      - name: Check bundle size
        run: |
          echo "üì¶ Checking bundle size..."
          npx chrry check-size --platform=${{ matrix.platform }}
      
      - name: Upload build artifacts
        uses: actions/upload-artifact@v4
        with:
          name: build-${{ matrix.platform }}
          path: dist/${{ matrix.platform }}
          retention-days: 7

  # ============================================
  # DEPLOY (only on main branch)
  # ============================================
  deploy:
    name: Deploy to Chrry
    runs-on: ubuntu-latest
    needs: build
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Download web build
        uses: actions/download-artifact@v4
        with:
          name: build-web
          path: dist/web
      
      - name: Download native build
        uses: actions/download-artifact@v4
        with:
          name: build-native
          path: dist/native
      
      - name: Deploy to Chrry CDN
        env:
          CHRRY_DEPLOY_TOKEN: ${{ secrets.CHRRY_DEPLOY_TOKEN }}
        run: |
          echo "üöÄ Deploying to Chrry..."
          
          # Deploy web bundle
          curl -X POST https://api.chrry.dev/deploy \
            -H "Authorization: Bearer $CHRRY_DEPLOY_TOKEN" \
            -F "platform=web" \
            -F "bundle=@./dist/web/bundle.js" \
            -F "manifest=@./dist/web/manifest.json"
          
          # Deploy native bundle
          curl -X POST https://api.chrry.dev/deploy \
            -H "Authorization: Bearer $CHRRY_DEPLOY_TOKEN" \
            -F "platform=native" \
            -F "bundle=@./dist/native/bundle.js" \
            -F "manifest=@./dist/native/manifest.json"
      
      - name: Update app registry
        env:
          CHRRY_DEPLOY_TOKEN: ${{ secrets.CHRRY_DEPLOY_TOKEN }}
        run: |
          echo "üìù Updating app registry..."
          
          # Read version from chrry.config.js
          VERSION=$(node -p "require('./chrry.config.js').default.version")
          APP_SLUG=$(node -p "require('./chrry.config.js').default.slug")
          
          # Notify Chrry platform
          curl -X POST https://api.chrry.dev/apps/update \
            -H "Authorization: Bearer $CHRRY_DEPLOY_TOKEN" \
            -H "Content-Type: application/json" \
            -d "{\"app\": \"$APP_SLUG\", \"version\": \"$VERSION\"}"
      
      - name: Notify deployment success
        run: |
          echo "‚úÖ Deployment successful!"
          echo "üåê Web: https://chrry.dev/apps/$APP_SLUG"
          echo "üì± Native: Updated in Chrry app"

  # ============================================
  # NOTIFY (on failure)
  # ============================================
  notify-failure:
    name: Notify Failure
    runs-on: ubuntu-latest
    needs: [validate, security, build, deploy]
    if: failure()
    
    steps:
      - name: Send notification
        run: |
          echo "‚ùå Deployment failed!"
          echo "Check the logs above for details."
